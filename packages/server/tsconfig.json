{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"lib": ["ES2022"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ES2022",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"baseUrl": "src",
		"outDir": "./dist"
	},
	"include": ["src"],
	"exclude": [
		"dist",
		"node_modules",
		"test/**/*",
		"ci/**/*",
		"scripts/**/*",
		"__mocks__/**/*",
		"**/node_modules/**/*",
		"**/dts/**/*",
		"**/dist/**/*",
		"**/*.(spec|test).ts"
	]
}
