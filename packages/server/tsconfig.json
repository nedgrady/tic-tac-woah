{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es6",
		"module": "CommonJS",
		"strict": true,
		"allowJs": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src", "vite.config.ts"]
}
